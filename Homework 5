first_number = float(input('First number: '))
second_number = float(input('Second number: '))
action = input('Action: ')

if action == 'add': 
    # Creates the add function
    def add(first_number, second_number) :
    	sum = first_number + second_number
    	return sum
    print(add(first_number, second_number))
elif action == 'subtract': 
   # Creates the subtract function
    def subtract(first_number, second_number) :
    	difference = first_number - second_number
    	return difference
    print(subtract(first_number, second_number))
elif action == 'multiply': 
   # Creates the  multiply function
    def multiply(first_number, second_number) :
    	product = first_number * second_number
    	return product
    print(multiply(first_number, second_number))
elif action == 'divide': 
   # Creates the divide function
    def divide(first_number, second_number) :
    	# Checks for divide by zero error
    	if(second_number == 0) :
    		print('Error! Can\'t Divide by 0')
    	else:
    		quotient = first_number / second_number
    		return quotient
    print(divide(first_number, second_number))
elif action == 'is leap year':
	# Creates leap year function
    def is_leap_year(first_number) :
    	if(first_number % 4 == 0 and first_number % 100 != 0) :
    		if (first_number % 400 == 0) :
    			first_number = year
    	return year
    print(is_leap_year(first_number))
elif action == 'root':
    # Creates root fuction
    print(root(first_number, second_number))
else:
    print('unknown operation')
